<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pnl_main"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/txt_item_first_letter"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/layout_rounded_button"
        android:padding="8dp"
        android:gravity="center"
        android:text="A"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/txt_item_first_letter"
        android:orientation="vertical"
        android:paddingLeft="8dp">


        <TextView
            android:id="@+id/txt_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:maxLength="15"
            android:paddingTop="2dp"
            android:text="alparslan3806"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:maxLength="15"
            android:text="5dk"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:maxLength="15"
        android:padding="20dp"
        android:text="100 mt" />

</RelativeLayout>
